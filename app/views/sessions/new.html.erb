<% if flash[:alert] %>
  <%= flash[:alert] %>
<% end %> 


<div class="row">
<div class="col-md-4"></div>
  <div class="col-md-4">
  <br>
  	<h2>Login</h2>
			<%= form_tag '/login' do |f| %>
	    <div class="form-group">
    		<label>Email</label><br>
    		<div><%= text_field_tag :email, '', size: 50 %></div>
	    </div>
	    <div class="form-group">
    		<label>Password</label>
    		<div><%= password_field_tag :password, '', size: 50 %></div>
	    </div>
	    <div>
	      <%= submit_tag "Login", :class => "btn btn-primary" %>
	    </div>  	
	<%end%>    	
 </div>
<div class="col-md-4"></div>	
</div>			










