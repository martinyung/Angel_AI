<% if flash[:alert] %>
  <%= flash[:alert] %>
<% end %>  

<div class="container" style="margin-top:20px;">
  	<div class="panel panel default" style="border:1px solid #ddd; width: 30%;">
    	<div class="panel-body" style="width: 70%;">

			<h2>Login</h2>
			<%= form_tag '/login' do%>
			    <div class="form-group">
			      	<div class="row">
			        	<div class="col-md-4">
			        		<label>Email</label>
			        	</div>
			        	<div class="col-md-4">
			        		<div><%= text_field_tag :email %></div>
			        	</div>
			        </div>
			    </div>
			    <div class="form-group">
			      	<div class="row">
			        	<div class="col-md-4">
			        		<label>Password</label>
			        	</div>
			        	<div class="col-md-4">
			        		<div><%= password_field_tag :password %></div>
			        	</div>
			        </div>
			    </div>
			    <div>
			      	<%= submit_tag "Login", :class => "btn btn-primary" %>
			    </div>  	
			<%end%>    	
		</div>
	</div>
</div>			

